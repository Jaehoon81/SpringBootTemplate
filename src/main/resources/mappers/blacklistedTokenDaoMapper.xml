<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.jaehoon.springboottemplate.repository.dao.BlacklistedTokenDAO">

    <select id="findByTokenAndNotExpired" parameterType="String" resultType="kr.co.jaehoon.springboottemplate.dto.BlacklistedTokenDTO">
        SELECT id, token, expires_at, blacklisted_at
        FROM blacklisted_tokens
        WHERE token = #{token} AND expires_at > NOW()
    </select>

</mapper>
