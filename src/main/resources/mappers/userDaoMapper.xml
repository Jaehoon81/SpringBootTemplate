<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.jaehoon.springboottemplate.repository.dao.UserDAO">

    <select id="findByUsername" resultType="kr.co.jaehoon.springboottemplate.dto.UserDTO">
        SELECT id, username, password, displayname, role, created_at, updated_at
        FROM users
        WHERE username = #{username}
    </select>

</mapper>
